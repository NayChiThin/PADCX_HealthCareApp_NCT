<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvPreviousConsult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.padcx.doctor.views.components.CustomImageView
                android:id="@+id/ivPatient"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/photo"
                app:cornerRadius="24dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="23dp"/>
            <TextView
                android:id="@+id/tvPatientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivPatient"
                android:layout_marginTop="24dp"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/colorTextBold"
                android:textSize="17sp"
                android:text="Aung Aung"/>
            <ImageView
                android:id="@+id/ivCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPatientName"
                android:layout_toEndOf="@id/ivPatient"
                android:layout_marginStart="33dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/calendar_solid"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPatientName"
                android:layout_toEndOf="@id/ivCalendar"
                android:layout_marginStart="13dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:textColor="@color/colorTextGrayLight"
                android:text="14 Nov 2020"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSendMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                app:cornerRadius="15dp"
                android:text="@string/myan_send_message"
                android:backgroundTint="@color/colorPrimary"/>
            <View
                android:id="@+id/horizontalLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="27dp"
                android:background="@color/colorLineGrayLight"
                android:layout_below="@id/ivPatient"/>
            <TextView
                android:id="@+id/tvConsultNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_below="@id/horizontalLine"
                android:textColor="@color/colorBlue"
                android:layout_marginStart="23dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="@string/myan_consult_note"/>
            <View
                android:id="@+id/verticalLineOne"
                android:layout_width="1dp"
                android:layout_height="49dp"
                android:background="@color/colorLineGrayLight"
                android:layout_below="@id/horizontalLine"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tvConsultNote"/>
            <TextView
                android:id="@+id/tvPrescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_toEndOf="@id/verticalLineOne"
                android:fontFamily="@font/poppins_bold"
                android:layout_below="@id/horizontalLine"
                android:textColor="@color/colorBlue"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="@string/myan_prescription"/>
            <View
                android:id="@+id/verticalLineTwo"
                android:layout_width="1dp"
                android:layout_height="49dp"
                android:background="@color/colorLineGrayLight"
                android:layout_below="@id/horizontalLine"
                android:layout_toStartOf="@id/tvNote"/>
            <TextView
                android:id="@+id/tvNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_bold"
                android:layout_below="@id/horizontalLine"
                android:textColor="@color/colorBlue"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="@string/myan_note"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>