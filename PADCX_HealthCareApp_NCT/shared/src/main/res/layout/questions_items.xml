<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp">
    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="1 ). "
        android:fontFamily="@font/raleway_medium"/>
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvCount"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/raleway_medium"
        android:text="သွားနှင့်ခံတွင်းဆိုင်ရာ‌ရောဂါများကို မကြာခဏ စစ်ဆေးလေ့ ပါလား ?"/>
    <ImageView
        android:id="@+id/ivAnswerIndicator"
        android:layout_width="21dp"
        android:layout_height="14dp"
        android:src="@drawable/ellipse_8"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tvQuestion"/>
    <TextView
        android:id="@+id/tvSpecialityAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivAnswerIndicator"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/tvQuestion"
        android:fontFamily="@font/raleway_medium"
        android:text="မရှိပါ"
        android:layout_marginStart="8dp"/>
</RelativeLayout>