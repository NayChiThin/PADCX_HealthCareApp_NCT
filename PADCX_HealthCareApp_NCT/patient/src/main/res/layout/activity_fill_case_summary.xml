<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHomeBackground"
    tools:context=".FillCaseSummaryActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/arrow_down_short"/>
            <TextView
                android:id="@+id/tvFillSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/raleway_bold"
                android:layout_marginStart="25dp"
                android:textColor="@color/colorGrayDark"
                android:text="@string/myan_fill_summary"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:id="@+id/rlBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar">
        <RelativeLayout
            android:id="@+id/rlNavigator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/ivCheck"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/ic_check_circle_fill"/>
            <View
                android:id="@+id/ivPath"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="-5dp"
                android:background="@color/colorPrimary"
                android:layout_toEndOf="@id/ivCheck"/>
            <View
                android:id="@+id/ivPath2"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_marginTop="32dp"
                android:background="@color/colorGray"
                android:layout_toEndOf="@id/ivPath"/>
            <ImageView
                android:id="@+id/ivCheck2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="22dp"
                android:layout_toEndOf="@id/ivPath2"
                android:layout_marginStart="-5dp"
                android:src="@drawable/ic_check_circle_gray"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llNavigator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:layout_below="@id/rlNavigator">
            <TextView
                android:id="@+id/tvGeneralQuestionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/colorDialogText"
                android:text="@string/myan_general_questions"/>
            <TextView
                android:id="@+id/tvSpecialityQuestionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/colorDialogText"
                android:text="@string/myan_speciality_question"/>
        </LinearLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_below="@id/llNavigator"/>
    </RelativeLayout>
</RelativeLayout>