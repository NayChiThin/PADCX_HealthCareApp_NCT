<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.padcx.padcx_healthcareapp_nct.views.components.CustomImageView
        android:id="@+id/ivSender"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:cornerRadius="19dp"
        android:src="@drawable/photo"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/tvMessageBody"/>
    <TextView
        android:id="@+id/tvMessageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxWidth="300dp"
        android:background="@drawable/rounded_layout"
        android:backgroundTint="@color/colorChatBackground"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:paddingEnd="15dp"
        android:paddingBottom="8dp"
        android:layout_toStartOf="@id/ivSender"
        android:layout_marginStart="10dp"
        android:text="Message body"
        android:textColor="@color/colorGrayDark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMessageBody"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto_regular"
        android:text="12:00 PM"
        android:visibility="gone"
        android:layout_marginEnd="5dp"
        android:layout_alignEnd="@id/tvMessageBody"
        android:textColor="@color/colorGrayDark"
        android:textSize="14sp" />
</RelativeLayout>