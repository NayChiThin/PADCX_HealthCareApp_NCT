<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivDoctor"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/photo"
                android:layout_marginTop="28dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/20/2020"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivDoctor"
                android:text="Name"
                android:textColor="@color/colorGrayDark"
                android:textSize="17sp"
                android:fontFamily="@font/raleway_bold"
                android:layout_marginTop="24dp"
                android:layout_marginStart="21dp"/>
            <TextView
                android:id="@+id/tvSpeciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDoctorName"
                android:layout_toEndOf="@id/ivDoctor"
                android:layout_marginStart="21dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="Speciality"
                android:fontFamily="@font/raleway_medium"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivDoctor"
                android:layout_marginTop="34dp"
                android:weightSum="2">
                <LinearLayout
                    android:id="@+id/llSendMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/rounded_layout_bottom_left">
                    <ImageView
                        android:id="@+id/ivSendMessage"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginStart="50dp"
                        android:src="@drawable/chat_box"/>
                    <TextView
                        android:id="@+id/tvSendMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_bold"
                        android:text="@string/myan_send_message"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llPrescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/rounded_layout_bottom_right"
                    android:backgroundTint="@color/colorPrimary">
                    <ImageView
                        android:id="@+id/ivPrescription"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginStart="50dp"
                        android:src="@drawable/prescription"/>
                    <TextView
                        android:id="@+id/tvPrescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_bold"
                        android:text="@string/myan_prescription"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>