<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="1 ). "
        android:fontFamily="@font/raleway_medium"/>
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvCount"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/raleway_medium"
        android:text="သွားနှင့်ခံတွင်းဆိုင်ရာ‌ရောဂါများကို မကြာခဏ စစ်ဆေးလေ့ ပါလား ?"/>
    <EditText
        android:id="@+id/etAnswer"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@drawable/rounded_edit_text"
        android:fontFamily="@font/raleway_medium"
        android:layout_below="@id/tvQuestion"
        android:backgroundTint="@color/colorGrayLight"/>
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorHomeBackground"
        android:layout_below="@id/etAnswer"/>
</RelativeLayout>